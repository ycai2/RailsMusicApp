<p>Note by <%= note.user.email %>: </p>
<p><%= note.text %></p>

<% if note.user == current_user %>
  <form action="<%= note_url(note.id) %>" method="POST">
    <%= auth_token %>
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
  </form>
<% end %>
<hr>
